{% extends 'base.html.twig' %}

{% block title %}Volunteer index{% endblock %}

{% block body %}
    <header class="masthead">
    <div class="container">
    <h1>Volunteer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Cognome</th>
                <th>Nome</th>
                <th>Data di nascita</th>
                <th>Indirizzo</th>
                <th>Cap</th>
                <th>Città</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Automunito</th>
                <th>Inizio disponibilità</th>
                <th>Fine disponibilità</th>
                <th>Consegna spesa</th>
                <th>Consegna farmaci</th>
                <th>BabySitting</th>
                <th>Note</th>
                <th>azioni</th>
            </tr>
        </thead>
        <tbody>
        {% for volunteer in volunteers %}
            <tr>
                <td>{{ volunteer.lastname }}</td>
                <td>{{ volunteer.name }}</td>
                <td>{{ volunteer.birthday ? volunteer.birthday|date('Y-m-d') : '' }}</td>
                <td>{{ volunteer.address }}</td>
                <td>{{ volunteer.zipcode }}</td>
                <td>{{ volunteer.city }}</td>
                <td>{{ volunteer.phone }}</td>
                <td>{{ volunteer.email }}</td>
                <td>{{ volunteer.carOwner ? 'Sì' : 'No' }}</td>
                <td>{{ volunteer.inception ? volunteer.inception|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ volunteer.expiry ? volunteer.expiry|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ volunteer.delivery ? 'Sì' : 'No' }}</td>
                <td>{{ volunteer.drugDelivery ? 'Sì' : 'No' }}</td>
                <td>{{ volunteer.babySitting ? 'Sì' : 'No' }}</td>
                <td>{{ volunteer.note }}</td>
                <td>
                    <a href="{{ path('volunteer_show', {'id': volunteer.id}) }}">show</a>
                    <a href="{{ path('volunteer_edit', {'id': volunteer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </header>
{% endblock %}
