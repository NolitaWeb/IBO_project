{% extends 'base.html.twig' %}

{% block title %}Volunteer{% endblock %}

{% block body %}
    <h1>Volunteer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ volunteer.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ volunteer.lastname }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ volunteer.name }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ volunteer.birthday ? volunteer.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ volunteer.address }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ volunteer.zipcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ volunteer.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ volunteer.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ volunteer.email }}</td>
            </tr>
            <tr>
                <th>CarOwner</th>
                <td>{{ volunteer.carOwner ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Inception</th>
                <td>{{ volunteer.inception ? volunteer.inception|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Expiry</th>
                <td>{{ volunteer.expiry ? volunteer.expiry|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Delivery</th>
                <td>{{ volunteer.delivery ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>BabySitting</th>
                <td>{{ volunteer.babySitting ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ volunteer.note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('volunteer_index') }}">back to list</a>

    <a href="{{ path('volunteer_edit', {'id': volunteer.id}) }}">edit</a>

    {{ include('volunteer/_delete_form.html.twig') }}
{% endblock %}
